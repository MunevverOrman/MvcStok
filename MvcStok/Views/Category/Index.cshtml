@using MvcStok.Models.Entity;
@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Ad</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <td>@ktgr.KATEGORIAD</td>

                <td><a href="/Category/DeleteCategory/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Category/GetCategory/@ktgr.KATEGORIID" class="btn btn-success">GÜNCELLE</td>

            </tr>

        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Category/CreateCategory" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

