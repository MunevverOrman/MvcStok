@using MvcStok.Models.Entity;
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ürün Id</th>
        <th>Ürün Ad</th>
        <th>Markası</th>
        <th>Kategori</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <th>@urun.URUNID</th>
                <td>@urun.URUNAD</td>
                <td>@urun.MARKA</td>


                <td>@(urun.TBLKATEGORILER != null ? urun.TBLKATEGORILER.KATEGORIAD : "Kategori Yok")</td>
                <td>@urun.FIYAT</td>
                <td>@urun.STOK</td>
                <td><a href="/Product/DeleteProduct/@urun.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Product/GetProduct/@urun.URUNID" class="btn btn-success">GÜNCELLE</a></td>


                <td>@urun.URUNKATEGORI</td>
                <td>@urun.FIYAT</td>
                <td>@urun.STOK</td>
                <td><a href="/Product/SIL/@urun.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Product/GUNCELLE/@urun.URUNID" class="btn btn-success">GÜNCELLE</a></td>



            </tr>

        }
    </tbody>
</table>
<a href="/Product/CreateProduct" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
