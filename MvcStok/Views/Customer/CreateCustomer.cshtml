@model MvcStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "CreateCustomer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşteri Adı</label>
        @*<input type="text" class="form-control" name="MUSTERIAD" />*@
        @Html.TextBoxFor(x => x.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MUSTERIAD, "", new { @style = "color:green" })
    </div>
    <div>
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
    </div>
    <div>
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri Eklendi...!');
        });
    </script>
</form>

