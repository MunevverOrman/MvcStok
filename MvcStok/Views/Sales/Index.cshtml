@model MvcStok.Models.Entity.TBLSATISLAR
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yapma Ekranı</h2>
            </div>
            <form method="post" action="/Sales/CreateSale">
                <div class="modal-body">
                    <label>
                        Ürün adı
                    </label>
                    @*<input type="text" name="Urun" class="form-control" />*@
                    @Html.TextBoxFor(x => x.URUN, new { @class = "form-control" })
                    <br />
                    <label>
                        Müşteri adı soyadı
                    </label>
                    @*<input type="text" name="marka" class="form-control" />*@
                    @Html.TextBoxFor(x => x.MUSTERI, new { @class = "form-control" })
                    <br />
                    <label>
                        Adet
                    </label>
                    @*<input type="text" name="musterı" class="form-control" />*@
                    @Html.TextBoxFor(x => x.ADET, new { @class = "form-control" })
                    <br />
                    <label>
                        Fiyat
                    </label>
                    @*<input type="text" name="telefon" class="form-control" />*@
                    @Html.TextBoxFor(x => x.FIYAT, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-info">Satış İşlemini Yap</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>